# =====================
# Django Configuration
# =====================
# フロントエンドのURL
FRONTEND_URL=http://localhost

# ドメイン設定
DOMAIN=http://localhost

# Djangoが受け入れるホスト名（カンマ区切り）
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,your-domain.com

# CSRF保護で信頼するオリジン（カンマ区切り）
DJANGO_CSRF_TRUSTED_ORIGINS=http://localhost,http://127.0.0.1,https://your-domain.com

# Django秘密鍵（必ず変更してください）
DJANGO_SECRET_KEY="your-secret-key-here"

VIDEO_UPLOAD_MAX_SIZE_MB=300

# =====================
# S3設定（USE_S3=TRUEの場合）
# =====================
# S3使用フラグ
USE_S3=FALSE

# AWS認証情報
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key

# S3バケット名
AWS_STORAGE_BUCKET_NAME=your-bucket-name

# =====================
# OpenSearch
# =====================
OPENSEARCH_HOST=opensearch
OPENSEARCH_PORT=9200

# =====================
# Redis / Celery
# =====================
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2
SHARE_ACCOUNT_MAX_CONCURRENT_USERS=30
SHARE_SESSION_TIMEOUT_MINUTES=10

# =====================
# Database
# =====================
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=postgres
POSTGRES_USER=videoq
POSTGRES_PASSWORD=your-postgres-password

# =====================
# Mailgun（メール送信）
# =====================
# Mailgun使用フラグ
USE_MAILGUN=FALSE

# =====================
# ベクトル検索プロバイダー
# =====================
# ベクトル検索プロバイダー（opensearch または pinecone）
VECTOR_SEARCH_PROVIDER=opensearch

# =====================
# Pinecone設定（VECTOR_SEARCH_PROVIDER=pineconeの場合）
# =====================
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_CLOUD=aws
PINECONE_REGION=us-east-1

# =====================
# OpenSearch Docker設定
# =====================
# OpenSearch設定
DISCOVERY_TYPE=single-node
BOOTSTRAP_MEMORY_LOCK=true
OPENSEARCH_JAVA_OPTS=-Xms512m -Xmx512m
DISABLE_INSTALL_DEMO_CONFIG=true
DISABLE_SECURITY_PLUGIN=true

# OpenSearch Dashboards設定
OPENSEARCH_HOSTS=["http://opensearch:9200"]
DISABLE_SECURITY_DASHBOARDS_PLUGIN=true

# ユーザーごとの動画数制限
DEFAULT_MAX_VIDEOS_PER_USER=25

# サインアップ機能
SIGNUP_ENABLED=TRUE

# =====================
# Basic認証
# =====================
BASIC_AUTH_ENABLED=TRUE
BASIC_AUTH_USERNAME=admin
BASIC_AUTH_PASSWORD=your-basic-auth-password

# HTTPS設定
SECURE_SSL_REDIRECT=FALSE # 本番ではTRUE
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=FALSE # 本番ではTRUE
SECURE_HSTS_PRELOAD=FALSE # 本番ではTRUE

# セッション・CSRF設定
SESSION_COOKIE_SECURE=FALSE # 本番ではTRUE
CSRF_COOKIE_SECURE=FALSE # 本番ではTRUE